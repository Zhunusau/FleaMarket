@model GodelMastery.FleaMarket.Web.ViewModels.ChangeLotUpdateIntervalViewModel
    
<div>
    @using (Html.BeginForm("ChangeLotUpdateInterval", "Lot", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Choose lot update interval</h4>
                </div>
                <div class="modal-body">
                   @Html.DropDownListFor(model => model.SelectedValue, new SelectList(Model.UpdateLotIntervals, "Value", "Text"), new { @class = "form-control" })
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    }
</div>